{
    "name": "flexlayout-react",
    "version": "0.8.6",
    "description": "A multi-tab docking layout manager",
    "main": "lib/index.js",
    "types": "./declarations/index.d.ts",
    "keywords": [
        "react",
        "layout",
        "dock",
        "popout",
        "tabs",
        "tabset",
        "splitter",
        "drag",
        "drop",
        "reactjs",
        "flexlayout",
        "flex layout",
        "layout manager",
        "drag and drop",
        "split view",
        "docking library",
        "docking layout"
    ],
    "scripts": {
        "eslint-fixall": "eslint src/ --fix",
        "open": "open http://localhost:8080/examples/demo/",
        "pretty": "prettier --write .",
        "pack": "pnpm pack",
        "send-to-cushy": "pnpm pack && cp flexlayout-react-0.8.1.tgz ../CushyStudio/src",
        "start": "webpack serve",
        "build": "npm run css && npm run doc && npm run build:esm",
        "build:esm": "tsc -p tsconfig2.json",
        "lint:eslint": "eslint src/*",
        "doc": "typedoc --out typedoc --exclude \"**/examples/**/*.tsx\" --excludeInternal --disableSources --excludePrivate --excludeProtected --readme none ./src",
        "css": "sass style/rounded.scss  style/rounded.css && sass style/underline.scss style/underline.css && sass style/gray.scss style/gray.css && sass style/light.scss style/light.css && sass style/light.scss test/style/light.css && sass style/dark.scss style/dark.css  && sass style/combined.scss style/combined.css"
    },
    "author": "Caplin Systems Ltd",
    "repository": "https://github.com/caplin/FlexLayout",
    "license": "ISC",
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "devDependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@fontsource/roboto": "^5.1.1",
        "@types/node": "^22.13.4",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "css-loader": "^7.1.2",
        "html-webpack-plugin": "^5.6.3",
        "prettier": "^3.5.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-scripts": "5.0.1",
        "sass": "^1.85.0",
        "source-map-loader": "^5.0.0",
        "style-loader": "^4.0.0",
        "styled-components": "^6.1.15",
        "ts-loader": "~9.5.2",
        "typedoc": "^0.27.7",
        "typescript": "^5.7.3",
        "webpack": "^5.98.0",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.0"
    }
}
